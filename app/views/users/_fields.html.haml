= render 'shared/error_messages', object: f.object
.form-group
	= f.label :name, class: "col-md-4 control-label"
	= f.text_field :name, class: "form-control"
	= f.text_field :alias, class: "form-control", placeholder: "alias"
.form-group
	= f.label :email, class: "col-md-4 control-label"
	= f.text_field :email, class: "form-control"
.form-group
	= f.label :password, class: "col-md-4 control-label"
	= f.password_field :password, class: "form-control"
.form-group
	= f.label :password_confirmation, "Confirm Password", class: "col-md-4 control-label"
	= f.password_field :password_confirmation, class: "form-control"