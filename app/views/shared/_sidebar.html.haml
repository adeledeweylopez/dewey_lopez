%aside
	%section
		
		.blogroll
			
			%a.thumbnail{href: '#'}
				%h1.subtle-link
					= @user.name
				= gravatar_for(@user, size: 200)
				.caption
					= @user.bio unless @user.bio.nil?
			-if @display
				!~ kramdown @user.sidebar unless @user.sidebar.nil?
		%h1
			- if current_user?(@user)
				- if @display
					= button_to "Create new post", new_page_path(@user), :class => "btn", :method => :get
