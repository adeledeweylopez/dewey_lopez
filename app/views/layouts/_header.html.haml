%nav.navbar.navbar-fixed-top.navbar-default(role="navigation")
	.container-fluid
		.navbar-header
			%button.navbar-toggle(type="button" data-toggle="collapse" data-target="#navcollapse")
				%span.sr-only Toggle navigation
				%span.icon-bar
				%span.icon-bar
				%span.icon-bar
			.navbar-brand
				= link_to "Dewey-Lopez", root_path, id: "logo" 
		.collapse.navbar-collapse#navcollapse
			%ul.nav.nav-tabs.navbar-right
				%li{:class => "#{'active' if current_page?(root_path)}"}	
					%a{href: root_path} 
						:erb
							<span class="glyphicon glyphicon-home"></span> Home
				%li{:class => "#{'active' if current_page?(users_path)}"}
					%a{href: users_path}
						:erb
							<span class="glyphicon glyphicon-align-justify"></span> Blogs
				- if signed_in?
					
					%li.dropdown#fat-menu{:class => "#{'active' if current_page?(current_user) || current_page?(blog_url(current_user)) || current_page?(edit_user_path(current_user))}"}
						%a.dropdown-toggle(data-toggle="dropdown"){href: "#" }
							:erb
								<span class="glyphicon glyphicon-user"></span> Account
							%b.caret
							%span.dropdown-arrow
						%ul.dropdown-menu
							%li= link_to "Profile",		current_user
							%li= link_to "Blog",		blog_url(current_user)
							%li= link_to "Settings", 	edit_user_path(current_user)
							%li.divider
							%li
								= link_to "Sign out", signout_path, method: "delete"
				- else
					%li
						%a{href: signin_path}
							:erb
									<span class="glyphicon glyphicon-user"></span> Sign in
				
					